@using TravelTripProje.Models.Classes
@model List<Blog>

@foreach (var item in Model.Where(x => x.Id == 3).ToList())
{
    <div class="left">
        <div class="bot-left">
            <img src="@item.BlogImage" alt="" />
        </div>
        <div class="left-text">
            <h4>@item.Title</h4>
            <span class="date">@item.Date.ToString("dd.MMMM.yyyy")</span>
            <p>@item.Explanation.Substring(0,80)</p>
            <p><a href="/Blog/BlogDetail/@item.Id"><span class="read">Devamı >></span></a></p>
        </div>
    </div>
}
